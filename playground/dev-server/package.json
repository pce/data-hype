{
  "name": "hype-dev-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --no-notify src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint \"src/**/*.ts\"",
    "build:css": "tailwindcss -i public/tailwind-input.css -o public/tailwind.css --minify",
    "watch:css": "tailwindcss -i public/tailwind-input.css -o public/tailwind.css --watch"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "express": "^4.22.1",
    "express-rate-limit": "^6.11.2",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "rxjs": "^7.8.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.25",
    "@types/node": "^20.19.27",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.57.1",
    "postcss": "^8.5.6",
    "tailwindcss": "v3-lts",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
