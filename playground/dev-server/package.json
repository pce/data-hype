{
  "name": "hype-dev-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --no-notify src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint \"src/**/*.ts\"",
    "build:css": "tailwindcss -i public/tailwind-input.css -o public/tailwind.css --minify",
    "watch:css": "tailwindcss -i public/tailwind-input.css -o public/tailwind.css --watch"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "express": "^4.18.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.0",
    "@types/ws": "^8.5.4",
    "@types/cors": "^2.8.12",
    "@types/cookie-parser": "^1.4.3",
    "@types/csurf": "^1.11.0",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.43.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "tailwindcss": "v3-lts",
    "postcss": "^8.4.23",
    "autoprefixer": "^10.4.14"
  }
}
